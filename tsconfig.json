{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"strict": true,
		"useDefineForClassFields": false,
		"experimentalDecorators": true,
		"outDir": "./lib",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"resolveJsonModule": false,
		"rootDir": "./src"
	},
	"include": ["./src/**/*.ts"],
	"exclude": []
}
